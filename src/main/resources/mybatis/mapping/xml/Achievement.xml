<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="szxs.accp.dao.AchievementDao">
    <select id="queryAchievement" resultMap="AchievementMap">
        select a.*,d.id d_id,d.name from achievement a,dept d
        <where>
            <if test="userName!=null and userName!=''">
                userName like concat('%',#{userName},'%')
            </if>
        </where>
    </select>
    <resultMap id="AchievementMap" type="Achievement">
        <result property="id" column="id"/>
        <result property="userName" column="userName"/>
        <result property="grade" column="grade"/>
        <result property="lastUpdateTime" column="lastUpdateTime"/>
        <result property="createdBy" column="createdBy"/>
        <result property="remark" column="remark"/>
        <association property="dept" javaType="Dept">
            <result property="id" column="d_id"/>
            <result property="name" column="name"/>
        </association>
    </resultMap>
    <insert id="addAchievement">
        insert into achievemet VALUES (DEFAULT ,#{userId},#{deptId},#{grade},#{lastUpdateTime},#{createdBy},#{remark})
    </insert>
    <update id="modifyAchievement">
        UPDATE achievement
        <set>
            <if test="userName!=null and userName!=''">
                userName=#{userName},
            </if>
            <if test="user.id>0">
                userId=#{user.id},
            </if>
            <if test="dept.id>0">
                deptId=#{dept.id},
            </if>
            <if test="grade>0">
                grade=#{grade},
            </if>
            <if test="createdBy!=null and createdBy!=''">
                createdBy=#{createdBy},
            </if>
            <if test="remark!=null and remark!=''">
                remark=#{remark}
            </if>
        </set>
        WHERE id=#{id}
    </update>
    <delete id="removeAchievement">
        DELETE  from achievement where id=#{id}
    </delete>
</mapper>